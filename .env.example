# Laravel API Guardian Configuration

# Error Format
# Options: jsend, rfc7807, jsonapi, graphql
API_GUARDIAN_FORMAT=jsend

# API Configuration
API_GUARDIAN_API_ENABLED=true
API_GUARDIAN_API_PREFIX=api/api-guardian

# Dashboard Configuration
API_GUARDIAN_DASHBOARD_ENABLED=true
API_GUARDIAN_LIVEWIRE_ENABLED=true
API_GUARDIAN_LIVEWIRE_PREFIX=api-guardian

# Monitoring
API_GUARDIAN_MONITORING_ENABLED=true
API_GUARDIAN_RETENTION_PERIOD=30

# Smart Recovery
API_GUARDIAN_RECOVERY_ENABLED=true
API_GUARDIAN_MAX_RETRIES=3
API_GUARDIAN_BASE_DELAY=1000
API_GUARDIAN_MAX_DELAY=10000
API_GUARDIAN_BACKOFF_MULTIPLIER=2.0

# Circuit Breaker
API_GUARDIAN_CIRCUIT_BREAKER_ENABLED=true
API_GUARDIAN_FAILURE_THRESHOLD=5
API_GUARDIAN_RECOVERY_TIMEOUT=60

# Performance
API_GUARDIAN_PERFORMANCE_ENABLED=true
API_GUARDIAN_SLOW_QUERY_THRESHOLD=1000
API_GUARDIAN_MEMORY_THRESHOLD=128

# Security
API_GUARDIAN_ALLOWED_IPS=*

# Real-time Updates (optional)
API_GUARDIAN_REALTIME_ENABLED=false
API_GUARDIAN_REALTIME_DRIVER=pusher
API_GUARDIAN_POLLING_INTERVAL=5000

# Alerting (optional)
API_GUARDIAN_ALERTING_ENABLED=false
SLACK_WEBHOOK_URL=
API_GUARDIAN_ALERT_EMAILS=
DISCORD_WEBHOOK_URL=

# Database Connection (optional, defaults to app connection)
API_GUARDIAN_DB_CONNECTION=

# IDE Integration for clickable file paths
# Options: vscode, phpstorm, sublime
API_GUARDIAN_IDE=vscode
